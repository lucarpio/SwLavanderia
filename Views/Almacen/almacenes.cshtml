                    </th>
                    <td style="width: 25%; text-align: center;">
                        @ViewBag.cantidadalmacen2/100
                    </td>
                </tr>
                
                <tr>
                    <th style="width: 10%; background-color: #7D888C;">
                        <h5 style="color: white;text-align: center;">
