        {
            <div>
                <h6>Almacén lleno</h6>
            </div>
        } 


    </div>

    
</div>

<div style="text-align: right; margin: 10px" >
    <a asp-controller="Servicio" asp-action="Registro" class="btn btn-primary"> Agregar Nuevo Servicio </a>
</div>

<script>
    function ocultar(){
        document.getElementById('MostrarOcultar').style.display="none";
    }
    function mostrar(){
        document.getElementById('MostrarOcultar').style.display="block";
    }
</script>