        <h2 style="text-align: center; background-color: #C7FFFF; color: blue;">
            Almacén 1
        </h2>
       
        <table style="width: 100%;" class="table table-hover" border="5">
                <tr>
                    <th style="width: 10%; background-color: #7D888C;">
                        <h5 style="color: white; text-align: center; ">
                            Estado: 
                        </h5> 
                    </th>
                    <td style="width: 25%; text-align: center;">
                        @ViewBag.cantidadalmacen1/78
                    </td>
                </tr>
                
                <tr>
                    <th style="width: 10%; background-color: #7D888C;">
                        <h5 style="color: white; text-align: center;">
                            Porcentaje: 
                        </h5> 
                    </th>
                    <td style="width: 25%; text-align: center;">
                        @ViewBag.almacenes1 % ocupado
                    </td>
                    
                </tr>

                <tr>
                    <th style="width: 10%; background-color: #7D888C;"> 
                        <h5 style="color: white; text-align: center;">
                            Disponibles:
                        </h5>
                    </th>
                    <td style="width: 25%; text-align: center;">
                        @ViewBag.restante1 espacios
                    </td>
                    
                </tr>
        </table>
        
        @if (ViewBag.mensaje1 != null)
        {
            <div>
                <h6>Almacén lleno</h6>
            </div>
        } 
       

        
        
    </div>

    <br>
    <br>
    <br>


    <div class="col-12">
        
        <h2 style="text-align: center; background-color: #C7FFFF; color:blue;" >
            Almacén 2
        </h2>
        <table style="width: 100%;" class="table table-hover" border="5">
                
                <tr>
                    <th style="width: 10%; background-color: #7D888C;">
