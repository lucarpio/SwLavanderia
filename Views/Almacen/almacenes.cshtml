
@{
    ViewBag.title = "Capacidad de almacenes";
}
<div class="text-center">
    <h1>@ViewBag.title</h1>
</div>

<br><br>


<div class="container">
    <div class="col-12">
        

        <!--
        <input class="none" type="button" value="Mostrar Información del almacén" onclick="mostrar();">
