 </style>

@model Contact

<h3>Notificaciones</h3>
@ViewBag.msg
<form method ="post" enctype = "multipart/form-data" asp-controller="contact" asp-action="send">
    <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Nro de Boleta</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" asp-for="Phone" maxlength="6" minlength="6">
    </div>
  </div>
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Tipo de mensaje</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" asp-for="Address" value="Servicio sin recoger">
    </div>
  </div>
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Medio</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" asp-for="Subject" value="Gmail">
    </div>
  </div>
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" asp-for="Email" >
    </div>
  </div>
  <button class="btn-danger" value="Send">Enviar</button>

  <!--Api de Whatsapp-->

    <a class="appwhatsapp" href="https://api.whatsapp.com/send?phone=+51 965350722&amp;text=Estimado&nbsp;cliente,&nbsp;su&nbsp;ropa&nbsp;ya&nbsp;esta&nbsp;lista&nbsp;para&nbsp;ser&nbsp;recogida!">
     <img src="/imagenes/whatsapp.png" alt="Whatsapp" width="100" height="500">
    </a>
<h3 style="color:blue">
  @ViewBag.Mensaje
</h3>
<br>
<h3 style="color:red">
  @ViewBag.Error
</h3>
