@model Usuario


@{
    ViewBag.title = "Registro de usuario";
}

<h1 class="text-center">@ViewBag.title</h1>

<div class="alert alert-info">
    <h6>Su nombre de usuario estará conformado por las 3 primeras letras de sus nombre, las 3 primeras letras de su apellido y su número de documento</h6>
</div>
<br>

<form action="" method="post" >

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="nombre">Nombre(s):</label>
        <input asp-for="nombre" placeholder="Nombre" minlength="3" title="Ingrese un nombre válido, no se admiten números ni caractéres especiales" class="form-control" required="" pattern="[a-zA-Z]+"  >
        <span asp-validation-for="nombre" class="text-danger"></span>

    </div>
    
    
    <div class="form-group">
        <label asp-for="apellido">Apellido:</label>
        <input asp-for="apellido" placeholder="Apellido" minlength="3" title="Ingrese un apellido válido, no se admiten números ni caractéres especiales" class="form-control" required="" pattern="[a-zA-Z]+">
    </div>
    
    <div class="form-group">
            <label asp-for="tipdoc">Documento:</label>
            <select asp-for="tipdoc" class="form-control">
                <option value="Dni">Dni</option>
                <option value="Cne">Cne</option>
            </select>
    </div>


    <div class="form-group">
            <label asp-for="nrodoc">Numero de Documento*:</label>
            <input maxlength="8" minlength="8"  asp-for="nrodoc" type="text" title="En este campo solo acepta números" placeholder="Número de Documento" class="form-control" required="" pattern="[0-9]+">
    </div>
    
    
    <div class="form-group">
        <label asp-for="pwd" >Contraseña:</label>
        <input asp-for="pwd" type="password" placeholder="Ingrese una contraseña" class="form-control">
        <span asp-validation-for="pwd" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="pwdconfirm"> Confirmar Contraseña:</label>
        <input asp-for="pwdconfirm" type="password" placeholder="Repita su contraseña" class="form-control">
        <span asp-validation-for="pwdconfirm" class="text-danger"></span>
    </div>
    
    <div class="text-center pt-3">
        <div style="margin-bottom: 3px; ">
            <input style="padding-left: 30px; padding-right: 30px;" type="submit" class="btn btn-primary" value= "Registrar">
        </div>
        
</form>
        <div style="padding: 10px;">
            <input style="padding-left: 41px; padding-right: 41px;" type="button" class="btn btn-primary" value="Inicio" onclick="location.href='@Url.Action("Index","Home")'" >
        </div>
    </div>


