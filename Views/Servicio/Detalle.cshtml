@model Servicio
<div class="container">
    <h1 class="text-center">Registrar Servicio</h1>
    <br>
    <form method="POST" asp-route-idboleta="@ViewBag.idboleta">
        <div class="form-group">
            <label for="">Tipo de Servicio: </label>
            <select asp-for="serviciosDisponiblesId" asp-items="ViewBag.ServiciosDisponibles" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="">Descripcion: </label>
            <input asp-for="DescServicio" class="form-control" placeholder="Marca, detalles, color, etc.">
        </div>
        <div class="form-group">
            <label for="">Precio:</label>
            <input asp-for="PrecServicio" class="form-control" placeholder="Ej: S/.0.00">
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col">
                    <input type="submit" class="btn btn-success" value="Agregar (aÃ±ade a la lista)">
                </div>
                <div class="col">
                    <input type="button" class="btn btn-info" value="Cancelar" onclick="location.href='@Url.Action("Index","Home")'" >
                </div>
            </div>
        </div>
    </form>
</div>

