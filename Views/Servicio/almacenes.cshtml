

<div class="row">


    <div class="col-md-6">
        <h1>
            Almacén 1
        </h1>

        <input class="none" type="button" value="Mostrar Información del almacén" onclick="mostrar();">
        <input class="none" type="button" value="Ocultar Información del almacén" onclick="ocultar();">

        <div id = "MostrarOcultar" style="background-color: blue; color : white">
            <div>
            Estado: @ViewBag.cantidadalmacen1/78
            </div>
            
            <div>
                Porcentaje: 
                @ViewBag.almacenes1 %
            </div>

            <div>
                Disponibles:
                @ViewBag.restante1 espacios
            </div>
        </div>

        
        
    </div>


    <div class="col-md-6">
        <h1>
            Almacén 2
        </h1>
        <div>
            Estado: @ViewBag.cantidadalmacen2/100
        </div>
        
        <div>
            Porcentaje: 
            @ViewBag.almacenes2 %
        </div>

        <div>
            Disponibles:
            @ViewBag.restante2 espacios
        </div>
    </div>

    
</div>



<script>
    function ocultar(){
        document.getElementById('MostrarOcultar').style.display="none";
    }
    function mostrar(){
        document.getElementById('MostrarOcultar').style.display="block";
    }
</script>