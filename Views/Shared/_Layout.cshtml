<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwLavanderia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> 
        @* <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>*@
        @* <link rel="stylesheet" type="text/css" href="css/bootstrap.css" /> *@
        <link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css" />
        <link rel="stylesheet" type="text/css" href="css/style.css" />
        <link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css" />
        <link rel="stylesheet" type="text/css" href="css/style.css" />
        <link rel="stylesheet" type="text/css" href="css/pluton.css" />
        <link rel="stylesheet" type="text/css" href="css/jquery.cslider.css" />
        <link rel="stylesheet" type="text/css" href="css/jquery.bxslider.css" />
        <link rel="stylesheet" type="text/css" href="css/animate.css" />
        

        <link rel="icon" type="image/png" href="imagenes/ico/burbujas01.png" />
</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark bg-dark border-bottom border-dark box-shadow" >
            <div class="container" > 
                 <a asp-controller="Home" asp-action="Index" class="brand">
                        <img src="imagenes/LogoBurbujas1.png"  alt="Logo" />
                        <!-- This is website logo -->
                    </a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="user-select: auto;">
                    <span class="navbar-toggler-icon" style="user-select: auto;"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <!--<li class="nav-item active">-->
                        <li class="nav-item">
                            <a class="nav-link active text-light" asp-controller="Home" asp-action="Index">INICIO</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle active text-light" href="#" data-toggle="dropdown" role="button" >SEGUIMIENTO DE ALMACÉN</a>
                                <div class="dropdown-menu bg-dark ">
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="serviciosPendientes">Listar servicios pendientes</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Almacen" asp-action="almacenes">Visualizar capacidad de almacenes</a>
                                    
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" style="cursor: pointer;" data-toggle="dropdown" role="button" >MANTENIMIENTO DE SERVICIOS</a>
                                <div class="dropdown-menu bg-dark">
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="Registro">Registrar Servicio y Prendas de Lavandería</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="servicios">Listar Servicios</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Cliente" asp-action="RegistrarCliente">Registrar Cliente</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="serviciosRealizados">Listar Reporte de servicios</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="ModificarEstadoServicio">Actualizar Estado de Servicio</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Cliente" asp-action="ListarCliente">Listar Clientes registrados</a>
                                    
                                </div>
                            </li>
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" style="cursor: pointer;" data-toggle="dropdown" role="button" >ATENCIÓN DE CLIENTES</a>
                                <div class="dropdown-menu bg-dark">
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Servicio" asp-action="VerEstadoServicio">Visualizar detalle y estado de servicios</a>
                                    <a class="dropdown-item bg-dark text-light" asp-controller="Contact" asp-action="Index">Notificar servicios</a>
                                </div>
                            </li>
                            

                            <li class="nav-item">
                                    <a class="nav-link active text-light" asp-controller="Cuenta" asp-action="logout">Cerrar Sesion (@User.Identity.Name)</a>
                            </li>
                        }else
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Cuenta" asp-action="Registro">Crear cuenta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Cuenta" asp-action="Acceso">Iniciar sesión</a>
                            </li>

                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    
       
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SwLavanderia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <div class="scrollup">
            <a href="#">
                <i class="icon-up-open"></i>
            </a>
        </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    <script src="~/js/site.js" asp-append-version="true"></script>

          <script src="js/jquery.js"></script> 
        <script type="text/javascript" src="js/jquery.mixitup.js"></script>
      <script type="text/javascript" src="js/bootstrap.js"></script> 
        <script type="text/javascript" src="js/modernizr.custom.js"></script>
        <script type="text/javascript" src="js/jquery.bxslider.js"></script>
        <script type="text/javascript" src="js/jquery.cslider.js"></script>
        <script type="text/javascript" src="js/jquery.placeholder.js"></script>
        <script type="text/javascript" src="js/jquery.inview.js"></script>
      
        <script type="text/javascript" src="js/app.js"></script>

    @RenderSection("Scripts", required: false)
    
</body>
</html>
