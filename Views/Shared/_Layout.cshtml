<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwLavanderia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> 
        @* <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>*@
        @* <link rel="stylesheet" type="text/css" href="css/bootstrap.css" /> *@
        <link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css" />
        <link rel="stylesheet" type="text/css" href="css/style.css" />
        <link rel="stylesheet" type="text/css" href="css/pluton.css" />
        <link rel="stylesheet" type="text/css" href="css/jquery.cslider.css" />
        <link rel="stylesheet" type="text/css" href="css/jquery.bxslider.css" />
        <link rel="stylesheet" type="text/css" href="css/animate.css" />
        <link rel="icon" type="image/png" href="imagenes/ico/burbujas01.png" />
</head>
<body>  
       <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="user-select: auto; background-color:#015878;">
            <div class="container" style="user-select: auto; ">
                 <a asp-controller="Home" asp-action="Index" class="brand">
                        <img src="imagenes/LogoBurbujas1.png"  alt="Logo" />
                        <!-- This is website logo -->
                    </a>
                <button class="switch" id="switch" style="user-select: auto;">
                    <span style="user-select: auto;">☺</span>
                    <span style="user-select: auto;">☻</span>
                </button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="user-select: auto;">
                    <span class="navbar-toggler-icon" style="user-select: auto;"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="user-select: auto;">
                       <ul class="nav" id="top-navigation">
                           <li><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>                    
                          <li><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                          @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="nav-link text-light" asp-area="" asp-controller="Cliente" asp-action="RegistrarCliente">Registrar Cliente</a></li>
                             <li><a class="nav-link text-light" asp-area="" asp-controller="Cliente" asp-action="ListarCliente">Listar Cliente</a></li>
                              <li><a class="nav-link text-light" asp-area="" asp-controller="Servicio" asp-action="Registro">Nuevo Servicio</a></li>
                              <li><a class="nav-link text-light" asp-area="" asp-controller="Servicio" asp-action="servicios">Listar servicios</a></li>
                             <li><a class="nav-link text-light" asp-area="" asp-controller="Servicio" asp-action="serviciosPendientes">Servicios pendientes</a></li>
                              <li><a class="nav-link text-light" asp-area="" asp-controller="Servicio" asp-action="serviciosRealizados">Servicios realizados</a></li>
                              }else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Cuenta" asp-action="Registro">Crear cuenta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Cuenta" asp-action="Acceso">Iniciar sesión</a>
                            </li> 
                        }
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SwLavanderia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <div class="scrollup">
            <a href="#">
                <i class="icon-up-open"></i>
            </a>
        </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    <script src="~/js/site.js" asp-append-version="true"></script>

          <script src="js/jquery.js"></script> 
        <script type="text/javascript" src="js/jquery.mixitup.js"></script>
      <script type="text/javascript" src="js/bootstrap.js"></script> 
        <script type="text/javascript" src="js/modernizr.custom.js"></script>
        <script type="text/javascript" src="js/jquery.bxslider.js"></script>
        <script type="text/javascript" src="js/jquery.cslider.js"></script>
        <script type="text/javascript" src="js/jquery.placeholder.js"></script>
        <script type="text/javascript" src="js/jquery.inview.js"></script>
      
        <script type="text/javascript" src="js/app.js"></script>

    @RenderSection("Scripts", required: false)
    
</body>
</html>
